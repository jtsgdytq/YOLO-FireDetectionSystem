<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="FireDetectionSystem.Views.VideoDetectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FireDetectionSystem.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="220" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock
                FontSize="20"
                Foreground="White"
                Margin="10,3,0,3"
                Text="置信度:" />
            <Slider
                IsSnapToTickEnabled="True"
                Margin="10,10,3,3"
                Maximum="1"
                Minimum="0"
                TickFrequency="0.1"
                Value="{Binding Confidence, Mode=TwoWay}"
                Width="200" />

            <Label Content="{Binding Confidence}" />


            <Button
                Command="{Binding SelectVideoPathCommnad}"
                Content="选择视频"
                HorizontalAlignment="Right" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border
                BorderBrush="Black"
                BorderThickness="2"
                Margin="5"
                Padding="10">
                <Image Source="{Binding OrigneImage}" Stretch="Uniform" />
                <!--<MediaElement
                    x:Name="mediaelement"
                    Cursor=""
                    LoadedBehavior="Manual"
                    Source="{Binding VideoPath}"
                    Stretch="Uniform" />-->
            </Border>
            <Border
                BorderBrush="Black"
                BorderThickness="2"
                Grid.Column="1"
                Margin="5"
                Padding="10">
                <Image Source="{Binding DetetionSoure}" Stretch="Uniform" />
            </Border>
        </Grid>
        <Grid Grid.Row="2" Margin="5,0,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="220" />
            </Grid.ColumnDefinitions>
            <Border
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="8"
                Grid.Column="0"
                Margin="0,0,10,0"
                Padding="10">
                <ListView
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="White"
                    ItemsSource="{Binding DetectionInfos}">
                    <ListView.Resources>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Background" Value="#0F1419" />
                            <Setter Property="BorderBrush" Value="#0F1419" />
                            <Setter Property="Padding" Value="6,4" />
                            <Setter Property="BorderThickness" Value="1" />
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                DisplayMemberBinding="{Binding Label}"
                                Header="目标"
                                Width="140" />
                            <GridViewColumn
                                DisplayMemberBinding="{Binding Confidence, StringFormat={}{0:P1}}"
                                Header="置信度"
                                Width="100" />
                            <GridViewColumn
                                DisplayMemberBinding="{Binding Box}"
                                Header="位置"
                                Width="200" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
            <Border
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="8"
                Grid.Column="1"
                Padding="12">
                <StackPanel>
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Margin="0,0,0,10"
                        Text="检测信息" />
                    <TextBlock Foreground="#B8C5D6">
                        <Run Text="检测数量: " />
                        <Run Text="{Binding DetectionCount}" />
                    </TextBlock>
                    <TextBlock Foreground="#B8C5D6">
                        <Run Text="最高置信度: " />
                        <Run Text="{Binding MaxConfidence, StringFormat={}{0:P1}}" />
                    </TextBlock>
                    <TextBlock Foreground="#B8C5D6">
                        <Run Text="更新时间: " />
                        <Run Text="{Binding LastUpdateTime}" />
                    </TextBlock>
                    <Button
                        Command="{Binding TogglePauseCommand}"
                        Content="{Binding PauseButtonText}"
                        Margin="0,10,0,0" />
                    <Button
                        Command="{Binding DetectionVideoCommand}"
                        Content="开始检测"
                        Margin="0,15,0,0" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
