<Window
    x:Class="FireDetectionSystem.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FireDetectionSystem.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="火灾检测"
    Width="1400"
    Height="900"
    prism:ViewModelLocator.AutoWireViewModel="True"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  菜单展开动画  -->
        <Storyboard x:Key="MenuOpen">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="100" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.35" Value="240">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuClose">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="240" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.35" Value="70">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!--  侧边栏渐变背景  -->
        <LinearGradientBrush x:Key="SidebarGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0" Color="#1a1d29" />
            <GradientStop Offset="0.5" Color="#232736" />
            <GradientStop Offset="1" Color="#1a1d29" />
        </LinearGradientBrush>

        <!--  顶栏渐变背景  -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Offset="0" Color="#FF6B35" />
            <GradientStop Offset="0.5" Color="#F7931E" />
            <GradientStop Offset="1" Color="#FFC75F" />
        </LinearGradientBrush>

        <!--  菜单按钮样式  -->
        <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
            <Setter Property="Height" Value="56" />
            <Setter Property="Margin" Value="5,4" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#B8C5D6" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="12">
                            <Grid>
                                <!--  发光效果背景  -->
                                <Border
                                    x:Name="GlowBorder"
                                    Background="#FF6B35"
                                    CornerRadius="12"
                                    Opacity="0">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="20"
                                            Direction="0"
                                            Opacity="0.6"
                                            ShadowDepth="0"
                                            Color="#FF6B35" />
                                    </Border.Effect>
                                </Border>

                                <!--  左侧指示条  -->
                                <Border
                                    x:Name="SelectedIndicator"
                                    Width="4"
                                    HorizontalAlignment="Left"
                                    CornerRadius="0,2,2,0"
                                    Opacity="0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Offset="0" Color="#FF6B35" />
                                            <GradientStop Offset="1" Color="#FFC75F" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>

                                <Grid Margin="5,0,5,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--  图标容器  -->
                                    <Border
                                        Grid.Column="0"
                                        Width="45"
                                        Height="45"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Background="#2a2f3e"
                                        CornerRadius="10">
                                        <Image
                                            x:Name="Icon"
                                            Width="40"
                                            Height="40"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Opacity="0.85"
                                            Source="{Binding Tag, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                                            Stretch="Uniform" />
                                    </Border>

                                    <!--  文字  -->
                                    <TextBlock
                                        x:Name="Text"
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="{TemplateBinding FontSize}"
                                        FontWeight="{TemplateBinding FontWeight}"
                                        Foreground="{TemplateBinding Foreground}"
                                        Text="{TemplateBinding Content}" />
                                </Grid>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Opacity)"
                                                To="0.15"
                                                Duration="0:0:0.2" />
                                            <ColorAnimation
                                                Storyboard.TargetName="Text"
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                To="#FFFFFF"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Opacity)"
                                                To="0"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                                <Setter TargetName="border" Property="Background" Value="#FFFFFF" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="GlowBorder" Property="Opacity" Value="0.15" />
                                <Setter TargetName="SelectedIndicator" Property="Opacity" Value="1" />
                                <Setter TargetName="Text" Property="Foreground" Value="#FFFFFF" />
                                <Setter TargetName="Text" Property="FontWeight" Value="SemiBold" />
                                <Setter TargetName="Icon" Property="Opacity" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  菜单按钮样式  -->
        <Style x:Key="MenuToggleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="10"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2a2f3e" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border
        Background="#0F1419"
        BorderBrush="#2a2f3e"
        ClipToBounds="True"
        CornerRadius="15">
        <Border.Clip>
            <RectangleGeometry RadiusX="15" RadiusY="15" Rect="0,0,1400,900" />
        </Border.Clip>
        <Grid>
            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="30"
                    Direction="0"
                    Opacity="0.5"
                    ShadowDepth="0"
                    Color="#000000" />
            </Grid.Effect>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  左边菜单  -->
            <Border
                Grid.Column="0"
                Background="{StaticResource SidebarGradient}"
                CornerRadius="15,0,0,15">
                <Grid
                    x:Name="GridMenu"
                    Width="70"
                    HorizontalAlignment="Left">
                    <StackPanel Margin="0,10,0,0">
                        <!--  Logo 和菜单切换按钮  -->
                        <StackPanel Margin="0,5,0,20">
                            <Border
                                Width="45"
                                Height="45"
                                Margin="0,0,0,15"
                                HorizontalAlignment="Center"
                                Background="{StaticResource HeaderGradient}"
                                CornerRadius="12">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="🔥" />
                            </Border>
                            <Button
                                x:Name="ButtonOpenMenu"
                                Height="50"
                                Margin="10,0"
                                Click="ButtonOpenMenu_Click"
                                Style="{StaticResource MenuToggleButtonStyle}">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Foreground="#B8C5D6"
                                    Kind="Menu" />
                            </Button>
                        </StackPanel>

                        <!--  分隔线  -->
                        <Separator
                            Height="1"
                            Margin="15,0,15,10"
                            Background="#2a2f3e" />

                        <!--  菜单项  -->
                        <RadioButton
                            Command="{Binding NavigateCommand}"
                            CommandParameter="ImageDetection"
                            Content="图片检测"
                            GroupName="MenuGroup"
                            IsChecked="True"
                            Style="{StaticResource MenuButtonStyle}"
                            Tag="pack://application:,,,/FireDetectionSystem;component/Icons/image.png" />

                        <RadioButton
                            Command="{Binding NavigateCommand}"
                            CommandParameter="VideoDetection"
                            Content="视频检测"
                            GroupName="MenuGroup"
                            Style="{StaticResource MenuButtonStyle}"
                            Tag="pack://application:,,,/FireDetectionSystem;component/Icons/vedio.png" />

                        <RadioButton
                            Command="{Binding NavigateCommand}"
                            CommandParameter="CameraDetection"
                            Content="摄像头检测"
                            GroupName="MenuGroup"
                            Style="{StaticResource MenuButtonStyle}"
                            Tag="pack://application:,,,/FireDetectionSystem;component/Icons/camera.png" />

                        <RadioButton
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Settings"
                            Content="设置"
                            GroupName="MenuGroup"
                            Style="{StaticResource MenuButtonStyle}"
                            Tag="pack://application:,,,/FireDetectionSystem;component/Icons/setting.png" />

                        <RadioButton
                            Command="{Binding NavigateCommand}"
                            CommandParameter="UserManagement"
                            Content="用户管理"
                            GroupName="MenuGroup"
                            Style="{StaticResource MenuButtonStyle}"
                            Tag="pack://application:,,,/FireDetectionSystem;component/Icons/user.png" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  主内容区域  -->
            <Grid Grid.Column="1" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  顶栏  -->
                <Border
                    Height="80"
                    Background="{StaticResource HeaderGradient}"
                    CornerRadius="0,15,0,0">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="15"
                            Direction="270"
                            Opacity="0.3"
                            ShadowDepth="3"
                            Color="#000000" />
                    </Border.Effect>

                    <Grid>
                        <!--  标题  -->
                        <StackPanel
                            Margin="30,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="火灾检测报警系统">
                                <TextBlock.Effect>
                                    <DropShadowEffect
                                        BlurRadius="8"
                                        Direction="270"
                                        Opacity="0.3"
                                        ShadowDepth="2"
                                        Color="#000000" />
                                </TextBlock.Effect>
                            </TextBlock>
                            <Border
                                Margin="15,0,0,0"
                                Padding="8,4"
                                Background="#FFFFFF"
                                CornerRadius="8"
                                Opacity="0.3">
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    Text="AI Powered" />
                            </Border>
                        </StackPanel>

                        <!--  窗口控制按钮  -->
                        <StackPanel
                            Margin="0,0,15,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <materialDesign:PopupBox
                                Width="40"
                                Height="40"
                                Margin="10,0"
                                Foreground="White"
                                PlacementMode="BottomAndAlignRightEdges"
                                StaysOpen="False">
                                <StackPanel Width="100">
                                    <Button
                                        Command="{Binding MinimizeCommand}"
                                        Content="最小化"
                                        Style="{StaticResource MaterialDesignFlatButton}" />
                                    <Button
                                        Command="{Binding MaximizeCommand}"
                                        Content="最大化"
                                        Style="{StaticResource MaterialDesignFlatButton}" />
                                    <Separator Margin="0,5" />
                                    <Button
                                        Command="{Binding ExitCommand}"
                                        Content="退出"
                                        Style="{StaticResource MaterialDesignFlatButton}" />
                                </StackPanel>
                            </materialDesign:PopupBox>
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  内容区域  -->
                <Grid
                    Grid.Row="1"
                    Margin="10,10,10,10"
                    Background="#0F1419">
                    <Border
                        Background="#16191f"
                        BorderBrush="#2a2f3e"
                        BorderThickness="1"
                        CornerRadius="12">
                        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>